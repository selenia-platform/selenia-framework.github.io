{% block scripts %}

  <script>
    jQuery ("document").ready (function ($) {
      var nav     = $ ('.seleniaheader');
      var sub     = $ ('#navbar-scrollselenia ul');
      var docsnav = $ ('.docsnav');
        var claim = $ ('.claim');
      $ (window).scroll (function () {
        if ($ (this).scrollTop () > 195) {
          sub.addClass ("submenutop");
          sub.addClass ("animated");
          sub.addClass ("fadeIn");
          docsnav.addClass ("docsnav2");
        } else {
          sub.removeClass ("submenutop");
          sub.removeClass ("fadeIn");
          docsnav.removeClass ("docsnav2");
        }
        if ($ (this).scrollTop () > 80) {
          nav.addClass ("f-nav");
          nav.addClass ("animated");
          nav.addClass ("slideInDown");
            claim.addClass ("claimtop80");
        } else {
          nav.removeClass ("f-nav");
          nav.removeClass ("animated");
          nav.removeClass ("slideInDown");
            claim.removeClass ("claimtop80");
        }
      });
    });

  </script>

